<h1>All posts</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <h2><%= post.title %></h2>
    <h3>
      <% if user_signed_in? %>
        <%= post.user.email %>
      <% else %>
        Anonymous
      <% end %>
    </h3>
    <p><%= post.body %></p>
  </li>
  <% end %>
</ul>


<% if user_signed_in? %>
  <%= link_to "New post", new_post_path %> <br>
  <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <%= link_to "Sign in!", new_user_session_path %>
<% end %>